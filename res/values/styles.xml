<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FeedYaTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.FeedYaTheme.ActionBar</item>
    </style>

    <style name="Theme.FeedYaTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#DDDDDD</item>
        <item name="android:titleTextStyle">@style/Theme.FeedYaTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.FeedYaTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Theme.FeedYaTheme.Widget.Holo.Button" parent="android:style/Widget.Button">
        <item name="android:background">@color/home_button_bg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#797979</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="FeedYaTheme.NoTitle" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@android:color/transparent</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
	<style name="PageTitleStriperText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
