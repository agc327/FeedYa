<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="fill_parent" 
android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/feed_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/feed_image"
        android:scaleType="fitCenter"
        android:paddingLeft="10dp"
        android:src="@android:drawable/ic_dialog_alert"/>

    <TextView
        android:id="@+id/feed_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonFav"
        android:layout_toRightOf="@+id/feed_icon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/home_button_normal"
        android:textSize="16sp"
        android:fontFamily="sans-serif" 
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/buttonFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_favorite"
        android:src="@drawable/ic_action_not_important" />

</RelativeLayout>